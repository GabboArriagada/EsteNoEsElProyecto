<div class="page-header clearfix">
  <h3>Notas de
    <%= Asignatura.find(@asignatura).nombre.titleize %>
    <small><%= 'De ' %><%= User.find(@user).name %>
      <%= User.find(@user).last_name %></small>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading"></div>
    <div class="panel-body">
      <table class="table table-striped table-hover">

        <thead>
          <tr>
            <th>Notas</th>
            <th>Porcentaje</th>
            <th>Editar</th>
          </tr>
        </thead>

        <tbody>
          <% unless @notas.empty? %>
            <% @notas.each do |nota| %>
              <tr>
                <td><%= nota.nota %></td>
                <td><%= nota.porcentaje%>%</td>
                <td>
                  <%= link_to edit_profesor_nota_path(nota, asignatura: @asignatura, user: @user) do %>
                  <%= fa_icon 'pencil', text: 'Editar' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="3">No tiene notas.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer">
    <%= link_to profesor_asignatura_path(@asignatura), class: 'btn btn-success' do %>
    <%= fa_icon 'arrow-circle-left', text: t(:list) +'a de cursos' %>
  <% end %>
</div>
</div>
</div>
