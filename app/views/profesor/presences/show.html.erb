<p id="notice"><%= notice %></p>

<h1>Asistencias</h1>
<br>
<h4>Listado completo</h4>

<table class="table">
  <thead>
    <tr>
      <th>Asistió</th>
      <th>Fecha</th>
      <th>Nombre</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @presences.each do |presence| %>
      <tr><%if presence.asistio == true%>
        <td><%= 'Si' %></td>
        <%else%>
        <td><%= 'No' %></td>
        <%end%>
        <td><%= presence.fecha %></td>
        <td><%= presence.user.name+' '+ presence.user.last_name%></td>
        <td><%= link_to profesor_presence_path(@presences), method: :delete, data: { confirm: 'Está seguro?' } do%>
          <%= fa_icon 'trash', text: 'Borrar' %>
        <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h4>Registrar asistencias del curso</h4>

<%= form_tag create_multiple_profesor_presences_path, method: :post do %>
  <table class="table">
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Fecha</th>
      <th>Asistencia</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.last_name%></td>
        <td><%=Date.today.to_s%></td>
        <td><%= check_box_tag "users_ids[]", user.id %></td>
      </tr>
    <% end %>
  </table>
  <%= submit_tag "Crear Asistencias", class:"btn btn-primary btn-xl" %>
<% end %>
