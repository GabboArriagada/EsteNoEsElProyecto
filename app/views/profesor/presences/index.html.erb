<div class="page-header clearfix">
  <h3>Ingresar asistencia
    <small><%= '' %></small>
  </h3>
</div>

<div class="panel panel-default">
  <div class="panel-heading">

  </div>
  <div class="panel-body">
    <table class="table table-striped table-hover">

  <thead>
    <tr>
      <th>Cursos</th>
      <th>Asistencia</th>
    </tr>
  </thead>

  <tbody>
    <% @cursos.each do |curso| %>
      <tr>
        <td><%= curso.grado %>° <%= curso.letra_codigo %></td>
        <td>
          <%= link_to profesor_presence_path(curso),class: 'btn btn-success btn-xs' do %>
            <%= fa_icon 'search', text: 'Ver' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


<div class="panel-footer">
  <%= link_to profesor_notas_path, class: 'btn btn-primary' do %>
    <%= fa_icon 'arrow-circle-left', text: 'Atrás' %>
  <% end %>
</div>
</div>
</div>
