<h3>Modificar Nota</h3>
<br><br>
<%= simple_form_for([:profesor, @nota]) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :user_id, as: :hidden, input_html: {value: @user} %>
    <%= f.input :asignatura_id, as: :hidden, input_html: {value: @asignatura} %>
    <%= f.input :nota, placeholder: 'Ej: 70', input_html: {min: 10, max: 70} %>
    <%= f.input :descripcion %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Cambiar Nota',class: "btn btn-danger" %>
  </div>
<% end %>

<br>
<div class="panel-footer">
  <%= link_to "/profesor/asignaturas/#{@asignatura}/notas?asignatura=#{@asignatura}&user=#{@user}", class: 'btn btn-success' do %>
    <%= fa_icon 'arrow-circle-left', text: t(:AtrÃ¡s) %>
  <% end %>
</div>
