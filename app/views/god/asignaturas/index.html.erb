<h1>Lista De cursos</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Nombre</th>
      <th>Curso</th>
      <th>Año</th>
      <th>assignar</th>

    </tr>
  </thead>
  <tbody>
    <% @asignaturas.each do |asignatura| %>
      <tr>
        <td><%= asignatura.id %></td>
        <td><%= asignatura.nombre %></td>
        <% if defined?asignatura.curso.grado and defined?asignatura.curso.letra_codigo  %>
          <td><%= asignatura.curso.grado %><%= asignatura.curso.letra_codigo %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= asignatura.año %></td>
        <td><%= link_to 'asignar alumnos o profesor', god_asignatura_path(asignatura) %></td>



      </tr>
    <% end %>
  </tbody>
</table>
