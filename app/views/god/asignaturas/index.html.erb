<div class="page-header clearfix">
  <h3><%= fa_icon 'leanpub' %> <%= 'Manejo de asignaturas' %>
    <small><%= 'Listar asignaturas' %></small>
  </h3>
</div>

<div class="panel panel-default" id="table_clientes">
  <div class="panel-heading clearfix">
    <div class="row">
      <div class="col-lg-6">

        <div class="input-group">
          <input id="search" name="search" value="<%= params[:search] %>" type="text" class="form-control" placeholder="Buscar curso">
          <span class="input-group-btn">
            <button class="btn btn-default" type="submit"><%= fa_icon 'search', text: '' %></button>
          </span>
        </div><!-- /input-group -->

      </div><!-- /.col-lg-6 -->

      <div class="col-lg-6">
        <%= link_to new_god_asignatura_path, class: 'btn btn-success pull-right' do %>
            <%= fa_icon 'plus', text: 'Agregar asignatura' %>
        <% end %>
      </div><!-- /.col-lg-6 -->
    </div><!-- /.row -->

  </div>
  <div class="panel-body">

    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
        <tr class="pretty">
          <th>Id</th>
          <th>Nombre</th>
          <th>Curso</th>
          <th>Año</th>
          <th>Acciones</th>
        </tr>
        </thead>

        <tbody>
          <% @asignaturas.each do |asignatura| %>
            <tr>
              <td><%= asignatura.id %></td>
              <td><%= asignatura.nombre %></td>
              <%if asignatura.curso.present?%>
                <td><%= asignatura.curso.grado %>° <%= asignatura.curso.letra_codigo %></td>
                <%else%>
                <td>No tiene curso asignado</td>
                <%end%>
              <td><%= asignatura.año %></td>
              <td><%= link_to 'asignar alumnos o profesor', god_asignatura_path(asignatura), class: 'btn btn-success btn-xs'%>
              <%= link_to 'Editar horario', edit_god_asignatura_path(asignatura), class: 'btn btn-warning btn-xs'%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>


  </div>
  <div class="panel-footer">

  </div>
</div>
