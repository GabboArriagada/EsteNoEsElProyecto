<div class="page-header clearfix">
  <h3><%= fa_icon 'truck' %> <%= t(:loading_method) %>
    <small><%= t(:list) + ' ' + t(:loading_methods).pluralize %></small>
  </h3>
</div>

<div class="panel panel-default" id="table_clientes">
  <div class="panel-heading clearfix">
    <div class="row">
      <div class="col-lg-6">
        <%= form_tag('/god/cursos', method: :get) do %>
            <div class="input-group">
              <input id="search" name="search" value="<%= params[:search] %>" type="text" class="form-control" placeholder="Buscar loading_method por nombre">
              <span class="input-group-btn">
            <button class="btn btn-default" type="submit"><%= fa_icon 'search', text: '' %></button>
          </span>
            </div><!-- /input-group -->
        <% end %>
      </div><!-- /.col-lg-6 -->

      <div class="col-lg-6">
        <%= link_to new_god_curso_path, class: 'btn btn-success pull-right' do %>
            <%= fa_icon 'plus', text: 'Agregar curso' %>
        <% end %>
      </div><!-- /.col-lg-6 -->
    </div><!-- /.row -->

  </div>
  <div class="panel-body">

    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
        <tr class="pretty">
          <th>Id</th>
          <th>Grado</th>
          <th>Letra</th>
          <th>Año</th>
          <th>acciones</th>
        </tr>
        </thead>

        <tbody>
        <% @cursos.each do |curso| %>
            <tr>
              <td><%= curso.id %></td>
              <td><%= curso.grado %></td>
              <td><%= curso.letra_codigo %></td>
              <td><%= curso.año %></td>
              <td>
                <%= link_to root_path, class: 'btn btn-info btn-xs' do %>
                    <%= fa_icon 'eye', text: 'Ver' %>
                <% end %>


                <%= link_to root_path, class: 'btn btn-warning btn-xs' do %>
                    <%= fa_icon 'pencil', text: 'Editar' %>
                <% end %>
                <%= link_to root_path, method: :delete, data: {confirm: '¿Está seguro?'}, class: 'btn btn-danger btn-xs' do %>
                    <%= fa_icon 'trash', text: 'Eliminar' %>
                <% end %>


              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <%= page_entries_info @cursos %>
  </div>
  <div class="panel-footer">
    <%= paginate @cursos %>
  </div>
</div>
