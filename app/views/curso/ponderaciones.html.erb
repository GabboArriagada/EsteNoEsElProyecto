<div class="page-header clearfix">
  <h3><%= fa_icon 'leanpub' %>
    <%= 'Ponderaciones' %>
  </h3>
</div>

<div class="panel panel-default">
  <div class="panel-heading"></div>

  <div class="panel-body">
      <table class="table table-striped table-hover">
        <thead>
          <tr class="pretty">
            <th>Valor de la ponderacion</th>
            <th>Ingresar notas</th>
          </tr>
        </thead>

        <tbody>
          <% @asignatura.ponderacions.each do |ponderacion| %>
            <tr>
              <td><%= ponderacion.valor%>%</td>
              <td>
                <%= link_to curso_ingresar_notas_path(ponderacion), class: 'btn btn-success btn-xs' do %>
                <%= fa_icon 'search', text: 'Ver' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>


</div>
<div class="panel-footer"></div>
</div>
