<p id="notice"><%= notice %></p>

<h1>Asignaturas</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th colspan="2">Asignatura</th>
    </tr>
  </thead>

  <tbody>
    <% @asignaturas.each do |asignatura| %>
      <tr>
        <td><%= asignatura.nombre %></td>
        <td>
          <%= link_to alumno_asignatura_path(asignatura) do%>
            <%= fa_icon 'search', text: 'Ver' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
