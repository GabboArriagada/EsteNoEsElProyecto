<h3>Asignatura <%=Asignatura.find(@asignatura).nombre.titleize%></h3>
<br><br>
<% unless @notas.empty? %>
<table class="table table-bordered table-striped">
  <thead>
    <% porcentaje = 0.0 %>
    <% @notas.each do |nota| %>
      <th>Nota <%= nota.porcentaje %>%</th><% porcentaje += nota.porcentaje.to_f/100 %>
    <% end %>
    <th>Nota Final</th>
  </thead>

  <tbody>
    <% notaf = 0.0 %>
    <% @notas.each do |nota| %>
      <td><%= nota.nota %></td> <% notaf += (nota.nota.to_f)*((nota.porcentaje.to_f)/100) %>
    <% end %>
    <% if porcentaje.to_i == 1 %>
    <td><%= notaf.round %></td>
    <% else %>
    <td></td>
    <% end %>
  </tbody>
</table>
<% else %>
<h4>No tiene notas aún.</h4>
<% end %>
<br>

<div class="panel-footer">
  <%= link_to alumno_notas_path, class: 'btn btn-success' do %>
    <%= fa_icon 'arrow-circle-left', text: t(:Atrás) %>
  <% end %>
</div>
<br>
<br>
