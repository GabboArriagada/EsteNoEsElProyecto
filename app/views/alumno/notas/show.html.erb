<div class="page-header clearfix">
  <h3><%= fa_icon 'exclamation-circle' %>
    Asignatura
    <%=Asignatura.find(@asignatura).nombre.titleize%>
  </h3>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Profesores del curso
    </h4>
  </div>
    <div class="panel-body">
<table class="table table-bordered table-striped">
      <% unless @notas.empty? %>
          <thead>
            <% porcentaje = 0.0 %>
              <% @notas.each do |nota| %>
                <th>Nota
                  <%= nota.porcentaje %>%</th>
                <% porcentaje += nota.porcentaje.to_f/100 %><% end %>
                <th>Nota Final</th>
              </thead>

              <tbody>
                <% notaf = 0.0 %>
                  <% @notas.each do |nota| %>
                    <td><%= nota.nota %></td>
                    <% notaf += (nota.nota.to_f)*((nota.porcentaje.to_f)/100) %><% end %>
                    <% if porcentaje.to_i == 1 %>
                      <td><%= notaf.round %></td>
                    <% else %>
                      <td></td>
                    <% end %>
                  </tbody>

              <% else %>
                <th>No tiene notas aún.</th>
              <% end %>
            </table>
            </div>
          <div class="panel-footer">
            <%= link_to alumno_notas_path, class: 'btn btn-success' do %>
            <%= fa_icon 'arrow-circle-left', text: t(:Atrás) %>
          <% end %>
        </div>
      </div>
