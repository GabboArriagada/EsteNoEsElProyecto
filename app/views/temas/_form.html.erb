<%= simple_form_for(@tema) do |f| %>
<%= f.error_notification %>
<div class="panel panel-default devise-bs text-center">
  <div class="panel-heading">
    <h4>Cree un tema para la asignatura</h4>
  </div>

  <div class="panel-body">

    <div class="form-inputs">
      <%= f.input :titulo, :label => "Titulo del tema" %>
      <%= f.input :asignatura_id, as: :hidden, input_html: {value: params[:asignatura]}%>
      <%= f.association :user, as: :hidden, input_html: {value: current_user.id} %>
    </div>

  </div>
  <div class="panel-footer">
    <div class="form-actions">
      <%= f.button :submit, 'Actualizar' %>
    </div>
  </div>
</div>
<% end %>
