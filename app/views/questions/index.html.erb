  <br>

      <% if can? :update, question %>
      <%= link_to 'Editar', edit_question_path(question) %> |
      <% end %>
      <% if can? :update, question %>
      <%= link_to 'Borrar', question, method: :delete, data: { confirm: 'Are you sure?'} %>
      <% end %>
    </div>
      <h4>Respuestas</h4>
